<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="google.android.com.myapplicationthread_broadcastreceiver_custom">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="google.android.com.myapplicationthread_broadcastreceiver_custom.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".MonReceiver">
            <intent-filter>
                <action android:name="com.exemple.broadcast.CUSTOM_INTENT">
                </action>
            </intent-filter>
        </receiver>


    </application>

</manifest>